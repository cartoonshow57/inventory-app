extends layout

block content

    h1= title

    section
        each skin in skins_list
            div.item
                img(src=skin.image, title=skin.image + ' Image')
                p #[strong Name:] 
                    span #{skin.skin_name}
                p #[strong Rarity:]
                    span #{skin.rarity}
                p #[strong Price:] 
                    span #{skin.price}
                p #[strong Stock:] 
                    span #{skin.stock}
